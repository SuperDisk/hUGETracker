    dn 90, 00, $205
endr
volset:
    dn C5, 00, $000
rept 32
    dn 90, 00, $C90
    dn 90, 00, $CF0
endr
notecut:
rept 32
    dn C5, 00, $E04
    dn 90, 00, $000
