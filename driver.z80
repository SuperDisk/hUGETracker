.process_effects:
    ;; Only do effects if not on tick zero

    loadShort pattern1, b, c
    call _lookup_note

    ld a, c
    cp 0
    jr z, .after_effect1

    ld e, 0
    call _doeffect

.after_effect1:
    loadShort pattern2, b, c
    call _lookup_note

    ld a, c
    cp 0
    jr z, .after_effect2

    ld e, 1
    call _doeffect

.after_effect2:
    ; loadShort pattern3, b, c
