rept 64
    db 90, 0, 0
endr
drums:
rept 16
    db 44, 0, 0
    db 90, 0, 0
    db 90, 0, 0
    db 90, 0, 0
endr
slideup:
  dn C4, 00, $000
rept 63
    dn 90, 00, $101
endr
